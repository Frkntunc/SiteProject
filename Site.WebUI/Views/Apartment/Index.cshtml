
@model List<ApartmentListModel>

@{
    ViewData["Title"] = "Apartments";
}

<h1>Daireler</h1>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["Message"]
    </div>
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"></h3>

                        <div class="card-tools">
                            <a asp-controller="Apartment" asp-action="Add">Yeni Daire</a>
                        </div>
                    </div>

                    @if (Model.Count > 0)
                    {
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover text-nowrap">
                                <thead>
                                    <tr>
                                        <th>User ID</th>
                                        <th>Blok</th>
                                        <th>Kat</th>
                                        <th>No</th>
                                        <th>Durumu</th>
                                        <th>Tip</th>
                                        <th>Sahibi/Kiracı</th>
                                        <th style="width:120px">Durumu</th>
                                        <th style="width:120px"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var apartment in Model)
                                    {
                                        <tr data-id="@apartment.Id">
                                            <td>@apartment.UserId</td>
                                            <td>@apartment.Blok</td>
                                            <td>@apartment.Floor</td>
                                            <td>@apartment.ApartmentNumber</td>
                                            <td>@apartment.Status</td>
                                            <td>@apartment.Type</td>
                                            <td>@apartment.Owner</td>
                                            <td>
                                                <a asp-action="Update" asp-route-id="@apartment.Id" class="btn btn-outline-warning btn-sm"> Düzenle </a>
                                                <a asp-action="Delete" asp-route-id="@apartment.Id" class="delete btn btn-outline-danger btn-sm">Sil</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <span>Kayıtlı Daire bulunamadı.</span>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


