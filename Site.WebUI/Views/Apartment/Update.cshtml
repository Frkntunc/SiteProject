@model UpdateApartmentModel
@{
    ViewData["Title"] = "Update";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0">Daire Düzenle</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Update" asp-controller="Apartment" method="post" class="w-75 mx-auto mt-2 p-2">
                    <div class="card">
                        <div class="card-body">

                            <div class="form-group">
                                <label asp-for="Blok"></label>
                                <input asp-for="Blok" class="form-control" />
                                <span asp-validation-for="Blok" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Floor"></label>
                                <input asp-for="Floor" class="form-control" />
                                <span asp-validation-for="Floor" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Owner"></label>
                                <input asp-for="Owner" class="form-control" />
                                <span asp-validation-for="Owner" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Status"></label>
                                <input asp-for="Status" class="form-control" />
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="UserId"></label>
                                <input asp-for="UserId" class="form-control" />
                                <span asp-validation-for="UserId" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Type"></label>
                                <input asp-for="Type" class="form-control" />
                                <span asp-validation-for="Type" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ApartmentNumber"></label>
                                <input asp-for="ApartmentNumber" class="form-control" />
                                <span asp-validation-for="ApartmentNumber" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>