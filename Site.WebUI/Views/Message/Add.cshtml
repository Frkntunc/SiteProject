@model SendMessageModel
@{
    ViewData["Title"] = "Add";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0">Yeni Mesaj</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Add" asp-controller="Message" method="post" class="w-75 mx-auto mt-2 p-2">
                    <div class="card">
                        <div class="card-body">

                            <div class="form-group">
                                <label asp-for="Content"></label>
                                <input asp-for="Content" class="form-control" type="text" />
                                <span asp-validation-for="Content" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="To"></label>
                                <input asp-for="To" class="form-control" type="email" />
                                <span asp-validation-for="To" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Gönder</button>
                            </div>

                            @if (ViewData["ErrorMesaj"] != null)
                            {
                                <h1>@ViewData["ErrorMessage"]</h1>
                            }

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>