
@model List<UserListModel>

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["Message"]
    </div>
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"></h3>

                        <div class="card-tools">
                            <a asp-controller="User" asp-action="Add">Yeni Kullanıcı</a>
                        </div>
                    </div>

                    @if (Model.Count > 0)
                    {
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover text-nowrap">
                                <thead>
                                    <tr>
                                        <th>İsim</th>
                                        <th>Soyisim</th>
                                        <th>Email</th>
                                        <th>Telefon</th>
                                        <th>TcNo</th>
                                        <th>Araç Plaka</th>
                                        <th>Daire Id</th>
                                        <th style="width:120px">Durumu</th>
                                        <th style="width:120px"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var user in Model)
                                    {
                                        <tr data-id="@user.Id">
                                            <td>@user.FirstName</td>
                                            <td>@user.LastName</td>
                                            <td>@user.Email</td>
                                            <td>@user.PhoneNumber</td>
                                            <td>@user.TcNo</td>
                                            <td>@user.VehicleInformation</td>
                                            <td>@user.ApartmentId</td>
                                            <td>
                                                <a asp-action="Update" asp-route-id="@user.Id" class="btn btn-outline-warning btn-sm"> Düzenle </a>
                                                <a asp-action="Delete" asp-route-id="@user.Id" class="delete btn btn-outline-danger btn-sm">Sil</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <span>Kayıtlı Kullanıcı bulunamadı.</span>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


