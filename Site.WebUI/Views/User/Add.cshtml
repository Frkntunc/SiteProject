@model AddUserModel
@{
    ViewData["Title"] = "Add";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-12">
                <h1 class="m-0">Yeni Kullanıcı</h1>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Add" asp-controller="User" method="post" class="w-75 mx-auto mt-2 p-2">
                    <div class="card">
                        <div class="card-body">

                            <div class="form-group">
                                <label asp-for="FirstName"></label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="LastName"></label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" type="email"/>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="PhoneNumber"></label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="TcNo"></label>
                                <input asp-for="TcNo" class="form-control" />
                                <span asp-validation-for="TcNo" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="VehicleInformation"></label>
                                <input asp-for="VehicleInformation" class="form-control" />
                                <span asp-validation-for="VehicleInformation" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ApartmentId"></label>
                                <input asp-for="ApartmentId" class="form-control" />
                                <span asp-validation-for="ApartmentId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-primary">Kaydet</button>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>