@model List<BillListModel>

@{
    ViewData["Title"] = "Bills";
}

<h1>Faturalar</h1>

@if (ViewData["Message"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["Message"]
    </div>
}

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"></h3>

                        <div class="card-tools">
                            <a asp-controller="Bill" asp-action="Add">Yeni Fatura</a>
                        </div>
                    </div>

                    @if (Model.Count > 0)
                    {
                        <div class="card-body table-responsive p-0">
                            <table class="table table-hover text-nowrap">
                                <thead>
                                    <tr>
                                        <th>Elektrik</th>
                                        <th>Su</th>
                                        <th>Doğalgaz</th>
                                        <th>Aidat</th>
                                        <th>Toplam Borç</th>
                                        <th>Ay</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var bill in Model)
                                    {
                                        <tr>
                                            <td>@bill.Electric</td>
                                            <td>@bill.Water</td>
                                            <td>@bill.NaturalGas</td>
                                            <td>@bill.Dues</td>
                                            <td>@bill.TotalDept</td>
                                            <td>@bill.Month</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <span>Kayıtlı Fatura bulunamadı.</span>
                    }
                </div>
            </div>
        </div>
    </div>
</section>